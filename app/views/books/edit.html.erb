<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>error occurred
          <ul>
            <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
      <%= form_with model: @book,method: :patch do |f| %>
      <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, autofocus: true, id:"book_title", class:"form-control book_title"%>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body, class:"form-control body" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Update Book', class:"btn btn-success" %>
  </div>
<% end %>
  		<%= link_to book_path(@book.id) do %>
  		Show
  		<% end %>
        |
  		<a class="back" href="/books">Back</a>
  </div>
</div>
</div>