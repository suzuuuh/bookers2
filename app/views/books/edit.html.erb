<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

  	  <div class="form-group">
      <%= form_with model: @book do |f| %>
    <label for="book_title">Title</label>
    <%= f.text_field :title, autofocus: true, id:"book_title", class:"form-control book_title"%>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body, class:"form-control body" %>
  </div>
  <div class="form-group">
    <%= link_to book_path(@book.id), class:"btn btn-success" do %>
    Update Book
    <% end %>
  </div>
</form>
<% end %>
  		<%= link_to book_path(@book.id) do %>
  		Show
  		<% end %>
        |
  		<a class="back" href="/books">Back</a>
  </div>
</div>