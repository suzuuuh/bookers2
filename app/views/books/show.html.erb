<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
          <h2>User info</h2>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th>
                  <%= @user.name %>
                  </th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th>
                  <%= @user.introduction %>
                  </th>
                </tr>
              </tbody>
            </table>


    <div class="row">
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </div>


    <h2 class="mt-3">New book</h2>
    <% if @book_new.errors.any? %>
      <%= @book_new.errors.count %>error occurred
      <ul>
        <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @book_new do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>

      <h5>Option</h5>
      <%= f.text_area :body %>

      <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
    <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
      <tbody>
          <tr>
            <td></td>
            <td>
              <%= image_tag @user.get_profile_image(50,50) %>
              <%= link_to book_path(@book.id) do %></br>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
            <td>
                <%= link_to edit_book_path(@book), class:"btn btn-sm btn-success" do %>Edit
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete %>
            </td>
            <% end %>
          </tr>
        <% end %>


      </tbody>
    </table>


        </div>
        </div>
        </div>
